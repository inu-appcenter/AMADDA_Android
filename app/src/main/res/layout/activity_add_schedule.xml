<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:textSize="28sp"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/color_cccccc"
            android:textStyle="bold"
            android:hint="일정 이름"
            android:backgroundTint="@android:color/transparent"
            android:inputType="text"/>

        <RelativeLayout
            android:id="@+id/rl_start"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="11dp"
            android:background="?android:selectableItemBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:textColor="@color/colorAccent"
                android:text="시작"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/tv_start_ampm"
                android:layout_marginEnd="31dp"
                android:textSize="16sp"
                android:textColor="@color/colorAccent"/>

            <TextView
                android:id="@+id/tv_start_ampm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/tv_start_time"
                android:layout_marginEnd="11dp"
                android:textSize="16sp"
                android:textColor="@color/colorAccent"/>

            <TextView
                android:id="@+id/tv_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="23dp"
                android:textSize="16sp"
                android:textColor="@color/colorAccent"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@color/color_cccccc"/>

        <RelativeLayout
            android:id="@+id/rl_end"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="?android:selectableItemBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:textColor="@color/colorAccent"
                android:text="종료"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/tv_end_ampm"
                android:layout_marginEnd="31dp"
                android:textSize="16sp"
                android:textColor="@color/colorAccent"/>

            <TextView
                android:id="@+id/tv_end_ampm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/tv_end_time"
                android:layout_marginEnd="11dp"
                android:textSize="16sp"
                android:textColor="@color/colorAccent"/>

            <TextView
                android:id="@+id/tv_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="23dp"
                android:textSize="16sp"
                android:textColor="@color/colorAccent"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@color/color_cccccc"/>

        <EditText
            android:id="@+id/et_place"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:drawableStart="@drawable/pin_map"
            android:layout_marginStart="34dp"
            android:layout_marginEnd="30dp"
            android:drawablePadding="20dp"
            android:hint="위치"
            android:backgroundTint="@android:color/transparent"
            android:textSize="16sp"
            android:textColor="@color/color_6a6a6a"
            android:textColorHint="@color/color_cccccc"
            android:inputType="text"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@color/color_cccccc"/>

        <LinearLayout
            android:id="@+id/ll_alarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_alarm"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="?android:selectableItemBackground">

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/alarm"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="38dp"/>

                <TextView
                    android:id="@+id/tv_alarm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/iv1"
                    android:layout_marginStart="22dp"
                    android:layout_centerVertical="true"
                    android:text="알림"
                    android:textSize="16sp"
                    android:textColor="@color/color_cccccc"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/down"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="28dp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@color/color_cccccc"/>

            <net.cachapa.expandablelayout.ExpandableLayout
                android:id="@+id/expandable_alarm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:el_duration="300"
                app:el_expanded="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:orientation="vertical">

                    <com.contrarywind.view.WheelView
                        android:id="@+id/wheel_alarm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_cccccc"/>

                </LinearLayout>

            </net.cachapa.expandablelayout.ExpandableLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_share"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="?android:selectableItemBackground">

                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/alarm"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="38dp"/>

                <TextView
                    android:id="@+id/tv_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/iv2"
                    android:layout_marginStart="21dp"
                    android:layout_centerVertical="true"
                    android:text="공유하기"
                    android:textSize="16sp"
                    android:textColor="@color/color_cccccc"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/down"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="28dp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@color/color_cccccc"/>

            <net.cachapa.expandablelayout.ExpandableLayout
                android:id="@+id/expandable_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:el_duration="300"
                app:el_expanded="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="BUTTON"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@color/color_cccccc"/>

                </LinearLayout>

            </net.cachapa.expandablelayout.ExpandableLayout>

        </LinearLayout>

        <EditText
            android:id="@+id/et_memo"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:drawableStart="@drawable/memo"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="30dp"
            android:drawablePadding="23dp"
            android:hint="메모"
            android:backgroundTint="@android:color/transparent"
            android:textSize="16sp"
            android:textColor="@color/color_6a6a6a"
            android:textColorHint="@color/color_cccccc"
            android:inputType="text"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@color/color_cccccc"/>

    </LinearLayout>

    <TextView
        android:id="@+id/btn_add"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="68dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="44dp"
        android:text="추가하기"
        android:background="@drawable/makefinish"
        android:textSize="16sp"
        android:textColor="@color/color_ffffff"
        android:textStyle="bold"
        android:gravity="center" />

</RelativeLayout>