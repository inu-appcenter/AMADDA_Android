<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_ffffff">

    <include
    layout="@layout/toolbar"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:layout_marginStart="27dp"
        android:textSize="28sp"
        android:textColor="@color/color_2d3e51"
        android:hint="공유 그룹 이름"
        android:backgroundTint="@color/color_ffffff"
        android:id="@+id/shared_groupname"
        android:textStyle="bold"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:id="@+id/shared_invite">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/email"
            android:layout_centerVertical="true"
            android:layout_marginStart="32dp"
            android:id="@+id/ka"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:textSize="16dp"
            android:textColor="@color/color_cccccc"
            android:text="초대하기"
            android:layout_marginStart="17dp"
            android:layout_toEndOf="@+id/ka"
            android:id="@+id/shared_invitename"
            android:gravity="center"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add_new_schedule_ic"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="21dp"
            android:background="@color/color_ffffff"
            android:id="@+id/shared_invitebutton"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/color_cccccc"
        />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:id="@+id/shared_color">

        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/group_color"
            android:layout_centerVertical="true"
            android:layout_marginStart="32dp"
            android:id="@+id/kaa" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:textSize="16dp"
            android:textColor="@color/color_cccccc"
            android:text="그룹 컬러"
            android:layout_marginStart="17dp"
            android:layout_toEndOf="@+id/kaa"
            android:id="@+id/shared_colorname"
            android:gravity="center"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/down"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:background="@color/color_ffffff"
            android:layout_marginEnd="27.7dp"
            android:id="@+id/shared_colorbutton"
            />





    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/color_cccccc"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/memo"
            android:layout_centerVertical="true"
            android:layout_marginStart="32dp"
            android:id="@+id/kaaa" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:textSize="16dp"
            android:textColor="@color/color_2d3e51"
            android:hint="메모"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@+id/kaaa"
            android:backgroundTint="@color/color_ffffff"
            android:textColorHint="@color/color_cccccc"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/color_cccccc"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="41dp"
            android:background="@drawable/makefinish"
            android:elevation="0dp"
            android:text="생성 완료"
            android:gravity="center"
            android:textColor="@color/color_ffffff"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="68dp"
            android:layout_marginEnd="68dp"
            />

    </RelativeLayout>


</LinearLayout>
