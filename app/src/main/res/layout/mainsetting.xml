<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_ffffff">

    <include
        layout="@layout/toolbar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:paddingStart="27dp"
        android:textSize="20sp"
        android:textColor="@color/color_2d3e51"
        android:id="@+id/mail"
        android:gravity="center_vertical"
        android:background="@color/color_eaf8ff"
        android:textStyle="bold"
        android:text="nalla5013@gmail.com"
        />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/account"
        android:background="?android:selectableItemBackground">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:layout_marginStart="27dp"
            android:gravity="center_vertical"
            android:textColor="@color/color_2d3e51"
            android:text="계정 관리"
            android:textSize="18sp"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="27dp"
            android:layout_centerVertical="true"
            android:src="@drawable/next"
            android:layout_alignParentEnd="true"

            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/color_cccccc"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile"
        android:background="?android:selectableItemBackground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_marginStart="27dp"
        android:gravity="center_vertical"
        android:text="프로필 편집"
        android:textSize="18sp"
        android:textColor="@color/color_2d3e51"
        />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="27dp"
            android:layout_centerVertical="true"
            android:src="@drawable/next"
            android:layout_alignParentEnd="true"

            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/color_cccccc"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/logout"
        android:background="?android:selectableItemBackground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_marginStart="27dp"
        android:text="로그아웃"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:textColor="@color/color_2d3e51"
        />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="27dp"
            android:layout_centerVertical="true"
            android:src="@drawable/next"
            android:layout_alignParentEnd="true"

            />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/color_cccccc"
        />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:paddingStart="27dp"
        android:textSize="20sp"
        android:textColor="@color/color_2d3e51"
        android:text="일반"
        android:id="@+id/normal"
        android:background="@color/color_eaf8ff"
        android:gravity="center_vertical"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:paddingStart="27dp"
        android:text="기본 화면"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:id="@+id/screen"
        android:textColor="@color/color_2d3e51"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/color_cccccc"
        />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_timetale"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_marginStart="27dp"
        android:text="시간표 (주간)"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:textColor="@color/color_707070"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="56dp"
        android:id="@+id/cb_timetable"
        android:gravity="center_vertical"
        android:checked="true"
        />
</RelativeLayout>

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_calendar"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_marginStart="27dp"
        android:text="달력 (월간)"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:textColor="@color/color_707070"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="56dp"
        android:id="@+id/cb_calendar"
        android:gravity="center_vertical"
        android:checked="false"
        />
</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/color_cccccc"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/push"
        android:background="?android:selectableItemBackground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_marginStart="27dp"
        android:text="푸쉬 알람"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:textColor="@color/color_2d3e51"
        />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="27dp"
            android:layout_centerVertical="true"
            android:src="@drawable/next"
            android:layout_alignParentEnd="true"

            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/color_cccccc"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/widget"
        android:background="?android:selectableItemBackground">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_marginStart="27dp"
        android:text="위젯 설정"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:textColor="@color/color_2d3e51"
        />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="27dp"
            android:layout_centerVertical="true"
            android:src="@drawable/next"
            android:layout_alignParentEnd="true"

            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/color_cccccc"
        />

</LinearLayout>
